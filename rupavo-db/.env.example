# ============================================
# Rupavo Supabase Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Set Edge Function secrets using: npx supabase secrets set KEY=value
# Or via Supabase Dashboard: Settings > Edge Functions > Secrets

# ============================================
# SUPABASE CORE (Required)
# ============================================
# Project URL and keys - found in Dashboard > Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database connection string - for migrations and seeders
# Found in Dashboard > Settings > Database > Connection String (use Transaction pooler)
SUPABASE_DB_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# ============================================
# ADMIN USER (For seeders/testing)
# ============================================
ADMIN_EMAIL=admin@rupavo.com
ADMIN_PASSWORD=your-secure-password

# ============================================
# MIDTRANS PAYMENT GATEWAY (Required for payments)
# ============================================
# Get credentials from: https://dashboard.midtrans.com/
# Settings > Access Keys
# IMPORTANT: Server Key is SECRET, never expose in client code!

# Sandbox (Testing)
MIDTRANS_SERVER_KEY=SB-Mid-server-xxxxxxxxxxxxx
MIDTRANS_CLIENT_KEY=SB-Mid-client-xxxxxxxxxxxxx
MIDTRANS_IS_PRODUCTION=false

# Production (Uncomment when going live)
# MIDTRANS_SERVER_KEY=Mid-server-xxxxxxxxxxxxx
# MIDTRANS_CLIENT_KEY=Mid-client-xxxxxxxxxxxxx
# MIDTRANS_IS_PRODUCTION=true

# ============================================
# KOLOSAL AI API (Required for AI features)
# ============================================
# Get your API key from: https://kolosal.ai/
# Used by: ai-chat-business-coach, ai-generate-product-copy, 
#          ai-generate-report, ai-generate-storefront
KOLOSAL_API_KEY=kol__your_kolosal_api_key_here

# ============================================
# OPTIONAL SERVICES
# ============================================

# OpenAI (Alternative AI provider)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# SendGrid (Email notifications)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# Twilio (SMS notifications)
SUPABASE_AUTH_SMS_TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx

# Apple Sign-In
SUPABASE_AUTH_EXTERNAL_APPLE_SECRET=xxxxxxxxxxxxx

# S3-compatible Storage (if not using Supabase Storage)
S3_HOST=your-s3-host
S3_REGION=your-s3-region
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
